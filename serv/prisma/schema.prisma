
datasource db {
  provider = "mysql"
  url      = "mysql://root:root@localhost:3306/doctor"
}


generator client {
  provider = "prisma-client-js"
}


model admin {
  id       Int    @id @default(autoincrement())
  Username String @unique(map: "Admin_Username_key")
  Email    String @unique(map: "Admin_Email_key")
  Password String
}

model appointment {
  id                    Int      @id @default(autoincrement())
  AppointmentTime       DateTime
  AppointmentDepartment String?
  doctor                Int
}

model blog {
  id       Int       @id @default(autoincrement())
  Title    String
  Text     String
  ImageUrl String?
  comment  comment[]
}

model comment {
  id        Int      @id @default(autoincrement())
  author    String
  comment   String
  timestamp DateTime
  blogId    Int
  userId    Int
  blog      blog     @relation(fields: [blogId], references: [id], map: "Comment_blogId_fkey")

  @@index([blogId], map: "Comment_blogId_fkey")
}

model doctor {
  id          Int     @id @default(autoincrement())
  FirstName   String
  LastName    String
  Username    String  @unique(map: "Doctor_Username_key")
  Email       String  @unique(map: "Doctor_Email_key")
  Password    String
  PhoneNumber String?
  ImageUrl    String  @default("")
  Speciality  String
}

model message {
  id      Int    @id @default(autoincrement())
  content String
}

model payments {
  id          Int      @id @default(autoincrement())
  Amount      Decimal
  PaymentDate DateTime
}

model product {
  id       Int     @id @default(autoincrement())
  name     String
  price    Decimal
  ImageUrl String?
  Category String
}

model ratingscomments {
  id       Int     @id @default(autoincrement())
  rating   Int
  review   String?
  imageSrc String?
  name     String?
}

model user {
  id          Int    @id @default(autoincrement())
  FirstName   String
  LastName    String
  Username    String @unique(map: "User_Username_key")
  Email       String @unique(map: "User_Email_key")
  Password    String
  UserType    String
  Speciality  String
  PhoneNumber String
  ImageUrl    String
}
